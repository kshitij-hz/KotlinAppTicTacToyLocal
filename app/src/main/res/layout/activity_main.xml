<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableRow
            android:gravity="center"
            android:layout_marginBottom="3pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu1" android:onClick="buClick"
                android:textSize="36sp"/>
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu2" android:onClick="buClick" android:textSize="36sp"/>
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu3" android:onClick="buClick" android:textSize="36sp"/>
    </TableRow>
    <TableRow
            android:gravity="center"
            android:layout_marginBottom="3pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu4" android:onClick="buClick" android:textSize="36sp"/>
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu5" android:onClick="buClick" android:textSize="36sp"/>
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu6" android:onClick="buClick" android:textSize="36sp"/>
    </TableRow>
    <TableRow
            android:layout_marginBottom="3pt"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu7" android:onClick="buClick" android:textSize="36sp"/>
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu8" android:onClick="buClick" android:textSize="36sp"/>
        <Button
                android:layout_marginRight="3pt"
                android:background="@color/colorPrimary"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu9" android:onClick="buClick" android:textSize="36sp"/>
    </TableRow>
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnRestart"
                android:textSize="14sp" android:onClick="restartGame"/>
    </TableRow>
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/winnerMsg" android:textAlignment="center"
                android:textColor="@android:color/holo_green_dark" android:textSize="12sp" android:textStyle="bold"/>
    </TableRow>
</TableLayout>